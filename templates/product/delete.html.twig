{% extends "base.html.twig" %}

{% block body %}
    <h1>Supprimer une catégorie</h1>

    <p>Confirmez vous la suppression de la catégorie <strong>{{ product.title }}</strong> (id: {{ product.id }}) ?</p>


    <form action="{{ app.request.uri }}" method="post">
        <input type="hidden" name="_method" value="DELETE">

        <a href="{{ url('app_product_read', {id: product.id}) }}" class="btn btn-primary">Non</a>
        <button type="submit" class="btn btn-danger">Oui</button>
    </form>

{% endblock %}

{% block title %}
    confirmation de suppression - {{ parent() }}
{% endblock title %}